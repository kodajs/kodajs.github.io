			// Gauge Animation - Superposition logic
			const arcKoda = document.querySelector(".gauge-arc-koda");
			const arcBunBase = document.querySelector(".gauge-arc-bun-base");
			const arcNode = document.querySelector(".gauge-arc-node");

			if (arcKoda && arcBunBase && arcNode) {
				const observer = new IntersectionObserver((entries) => {
					entries.forEach((entry) => {
						if (entry.isIntersecting) {
							setTimeout(() => {
								// Node: stay at base level (~60 reqs)
								(
									arcNode as HTMLElement
								).style.strokeDashoffset = "180";
								// Bun foundation: mid-level
								(
									arcBunBase as HTMLElement
								).style.strokeDashoffset = "120";
								// Koda Zenith: full boost
								(
									arcKoda as HTMLElement
								).style.strokeDashoffset = "28";

								// Counter Animation
								const counters =
									document.querySelectorAll(".counter");
								counters.forEach((counter) => {
									const el = counter as HTMLElement;
									const target =
										+el.getAttribute("data-target")!;
									const speed = 2000 / target;

									const updateCount = () => {
										const current = +el.innerText;
										if (current < target) {
											el.innerText = Math.ceil(
												current + 1,
											).toString();
											setTimeout(updateCount, speed);
										} else {
											el.innerText = target.toString();
										}
									};
									updateCount();
								});
							}, 500);
						}
					});
				});
				observer.observe(arcKoda);
			}

			// Simulated Traffic Log
			const logContainer = document.getElementById("telemetry-log");
			const methods = ["GET", "POST", "PUT", "DELETE"];
			const paths = [
				"/api/v1/galaxy",
				"/auth/session",
				"/data/stream",
				"/edge/function",
				"/graphql",
			];
			const statuses = [200, 201, 200, 200, 200, 204, 304];

			function addLog() {
				if (!logContainer) return;

				const now = new Date();
				const time = now.toISOString().split("T")[1].slice(0, 12);
				const method =
					methods[Math.floor(Math.random() * methods.length)];
				const path = paths[Math.floor(Math.random() * paths.length)];
				const status =
					statuses[Math.floor(Math.random() * statuses.length)];
				const duration = (Math.random() * 0.5).toFixed(2);

				const row = document.createElement("div");
				row.className =
					"flex gap-4 font-mono text-[10px] tracking-tight transition-all duration-300 animate-in slide-in-from-bottom-1 fade-in";

				let methodColor = "text-emerald-400";
				if (method === "POST") methodColor = "text-amber-400";
				if (method === "DELETE") methodColor = "text-rose-400";

				row.innerHTML = `
					<span class="text-slate-600 w-16 shrink-0">${time}</span> 
					<span class="${methodColor} w-8 shrink-0 font-bold">${method}</span> 
					<span class="text-slate-300 flex-1 truncate text-left">${path}</span> 
					<span class="text-sky-400 w-6 shrink-0">${status}</span> 
					<span class="text-slate-500 w-10 shrink-0 text-right font-mono">${duration}ms</span>
				`;

				logContainer.prepend(row);

				if (logContainer.children.length > 12) {
					logContainer.lastElementChild?.remove();
				}
			}

			if (logContainer) {
				// Initial fill
