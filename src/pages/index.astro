---
import Layout from "../layouts/Layout.astro";
import SmartCursor from "../components/SmartCursor.astro";
import ThreeHero from "../components/ThreeHero.astro";
import InteractivePlayground from "../components/InteractivePlayground.astro";
---

<Layout title="KodaJS | The Hyper-Speed Backend Framework">
	<SmartCursor />
	<div class="noise-overlay"></div>
	<!-- Header -->
	<!-- Tactical HUD: Top Left (Brand & Status) -->
	<div class="fixed top-6 left-6 z-50 flex items-center gap-4">
		<a
			href="/"
			class="glass-dark px-4 py-2 rounded-full flex items-center gap-3 border border-white/10 hover:border-sky-500/50 transition-all duration-300 group"
		>
			<img
				src="/logo.svg"
				alt="KodaJS Logo"
				class="w-6 h-6 drop-shadow-lg group-hover:rotate-12 transition-transform"
			/>
			<span class="font-bold tracking-tight text-sm"
				>Koda<span class="text-sky-400">Zenith</span></span
			>
		</a>
		<div
			class="glass-dark px-3 py-2 rounded-full flex items-center gap-2 border border-white/10 hidden md:flex"
		>
			<span class="relative flex h-2 w-2">
				<span
					class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"
				></span>
				<span
					class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"
				></span>
			</span>
			<span class="text-xs font-mono text-emerald-500/80 tracking-wider"
				>SYSTEM ONLINE</span
			>
		</div>
	</div>

	<!-- Tactical HUD: Top Right (Navigation) -->
	<div class="fixed top-6 right-6 z-50 flex items-center gap-3">
		<nav class="hidden md:flex items-center gap-2">
			{
				[
					{ label: "Docs", href: "/docs/introduction" },
					{ label: "Ecosystem", href: "#ecosystem" },
					{ label: "Blog", href: "/blog" },
					{ label: "Back Project", href: "/back" },
				].map((item) => (
					<a
						href={item.href}
						class={`glass-dark px-4 py-2 rounded-full text-xs font-medium text-slate-300 hover:text-white hover:border-sky-500/50 border border-white/10 transition-all duration-300 hover:shadow-[0_0_15px_rgba(14,165,233,0.3)] ${item.label === "Back Project" ? "text-rose-400 border-rose-500/30" : ""}`}
					>
						{item.label}
					</a>
				))
			}
			<button
				onclick="document.getElementById('command-search-input')?.focus(); document.dispatchEvent(new KeyboardEvent('keydown', { key: 'k', metaKey: true }));"
				class="hidden md:flex glass-dark px-3 py-2 rounded-full text-xs font-medium text-slate-400 hover:text-white border border-white/10 transition-colors items-center gap-2 group cursor-pointer"
				aria-label="Search"
			>
				<svg
					class="w-4 h-4 group-hover:text-sky-400 transition-colors"
					fill="none"
					viewBox="0 0 24 24"
					stroke="currentColor"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
				</svg>
				<span class="hidden lg:inline">Search</span>
				<kbd
					class="hidden lg:inline-flex items-center gap-0.5 px-1.5 py-0.5 rounded border border-white/10 bg-white/5 text-[10px] text-slate-500 font-sans"
				>
					<span class="text-xs">⌘</span>K
				</kbd>
			</button>
		</nav>

		<!-- Mobile Menu Trigger -->
		<button
			onclick="document.dispatchEvent(new CustomEvent('open-mobile-menu'))"
			class="md:hidden glass-dark p-2 rounded-full text-slate-300 hover:text-white border border-white/10 transition-colors cursor-pointer"
			aria-label="Open Menu"
		>
			<svg
				class="w-6 h-6"
				fill="none"
				viewBox="0 0 24 24"
				stroke="currentColor"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M4 6h16M4 12h16m-7 6h7"></path>
			</svg>
		</button>

		<a
			href="https://github.com/kodajs"
			target="_blank"
			class="glass-dark p-2 rounded-full text-slate-300 hover:text-white hover:bg-white/10 border border-white/10 transition-all"
		>
			<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
				><path
					d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
				></path></svg
			>
		</a>
	</div>

	<!-- Hero Section -->
	<section
		class="min-h-screen flex items-center relative overflow-hidden pt-20"
	>
		<!-- Background Elements -->
		<div
			class="absolute inset-0 pointer-events-none text-[20rem] font-black text-white/[0.015] select-none tracking-tighter z-0 leading-none"
		>
			ZENITH
		</div>
		<div
			class="absolute inset-x-0 bottom-0 top-1/2 -z-10 bg-gradient-to-t from-zinc-950 via-slate-900 to-transparent"
		>
		</div>

		<div
			class="max-w-7xl mx-auto px-6 relative z-10 w-full grid lg:grid-cols-2 gap-12 items-center"
		>
			<!-- Left Content: Asymmetrical Impact -->
			<div class="text-left relative z-20">
				<!-- Badge -->
				<div
					class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-xs font-medium mb-8 bg-slate-800/70 border border-white/10 text-slate-400 shadow-sm"
				>
					<span
						class="w-1.5 h-1.5 bg-sky-500 rounded-full animate-pulse"
					></span>
					Phase 2 · Active Development
				</div>

				<!-- Title -->
				<h1
					class="text-6xl md:text-8xl font-black mb-6 leading-[0.9] tracking-tighter"
				>
					<span
						class="gradient-text glitch block"
						data-text="Koda Zenith">Koda Zenith</span
					>
				</h1>

				<!-- Animated Headlines Container -->
				<div class="relative h-[3rem] md:h-[2.5rem] mb-8">
					<p
						class="text-2xl md:text-3xl text-slate-200 font-medium absolute inset-x-0 top-0 text-left transition-all duration-500"
						id="headline-1"
					>
						The <span class="text-sky-400">Hono-native</span> meta-framework
					</p>
					<p
						class="text-2xl md:text-3xl text-slate-200 font-medium absolute inset-x-0 top-0 text-left opacity-0 transition-all duration-500"
						id="headline-2"
					>
						Beyond Frameworks. Forge the Web Evolution
					</p>
				</div>

				<!-- Animated Subtitle Container (Restored) -->
				<div class="relative h-[5rem] md:h-[3rem] mb-10 max-w-xl">
					<p
						class="text-lg text-slate-500 leading-relaxed text-left absolute inset-x-0 top-0 transition-all duration-500"
						id="subtitle-1"
					>
						ESM-first, <span class="text-white font-medium"
							>Bun-fueled</span
						>, and engineered for production. Built on <span
							class="text-sky-700">Hono</span
						> for blazing edge performance.
					</p>
					<p
						class="text-lg text-slate-500 leading-relaxed text-left absolute inset-x-0 top-0 opacity-0 transition-all duration-500"
						id="subtitle-2"
					>
						The high-performance <span class="text-sky-700"
							>substrate</span
						> for the post-web era. Powered by <span
							class="text-white">Rust, Zig, and Elixir</span
						> core.
					</p>
				</div>

				<!-- CTA Buttons -->
				<div
					class="flex flex-col sm:flex-row items-center justify-start gap-4"
				>
					<a
						href="#features"
						class="px-8 py-4 rounded-full bg-white text-slate-950 font-bold hover:bg-sky-500 hover:text-white transition-all duration-300 shadow-[0_0_20px_rgba(255,255,255,0.3)] hover:shadow-[0_0_30px_rgba(14,165,233,0.6)] flex items-center gap-2"
					>
						<span>Deploy Zenith</span>
						<svg
							class="w-5 h-5"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							><path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
						>
					</a>
					<a
						href="https://github.com/kodajs/kodajs"
						target="_blank"
						class="px-8 py-4 rounded-full glass text-white font-bold hover:bg-white/10 hover:border-white/30 transition-all duration-300 flex items-center gap-2 group"
					>
						<svg
							class="w-5 h-5 text-slate-400 group-hover:text-white transition-colors"
							fill="currentColor"
							viewBox="0 0 24 24"
							><path
								fill-rule="evenodd"
								clip-rule="evenodd"
								d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.337-3.369-1.337-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.597 1.028 2.688 0 3.848-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12c0-5.523-4.477-10-10-10z"
							></path></svg
						>
						<span>Github</span>
					</a>
				</div>
			</div>

			<!-- Right Content: 3D Artifact Deep Integration -->
			<div
				class="relative h-[600px] w-full flex items-center justify-center lg:justify-end z-0"
			>
				<div
					class="absolute inset-0 bg-sky-500/10 rounded-full blur-[120px] opacity-30 animate-pulse"
				>
				</div>
				<ThreeHero />
			</div>
		</div>
	</section>

	<!-- Infinite Tech Marquee -->
	<section
		class="border-y border-white/10 py-12 bg-slate-950/80 relative z-20 overflow-hidden backdrop-blur-sm"
	>
		<!-- Layer 1: Tech Stack -->
		<div class="tech-marquee-container mb-8">
			<div class="tech-marquee-content">
				<!-- Content Duplicated for Infinite Scroll -->
				{
					Array(4)
						.fill([
							{ name: "Rust", color: "text-orange-400" },
							{ name: "Bun", color: "text-pink-400" },
							{ name: "Zig", color: "text-amber-400" },
							{ name: "Elixir", color: "text-purple-400" },
							{ name: "Web3", color: "text-emerald-400" },
							{ name: "AR/VR", color: "text-rose-400" },
							{ name: "BCI", color: "text-sky-300" },
							{ name: "WASM", color: "text-indigo-400" },
							{ name: "Edge", color: "text-sky-500" },
						])
						.flat()
						.map((tech) => (
							<div class="tech-item text-xl">
								<span
									class={`w-2 h-2 rounded-full ${tech.color} shadow-[0_0_10px_currentColor]`}
								/>
								<span>{tech.name}</span>
							</div>
						))
				}
			</div>
		</div>

		<!-- Layer 2: ZENITH Flow -->
		<div class="tech-marquee-container tech-marquee-reverse opacity-30">
			<div class="tech-marquee-content">
				{
					Array(10)
						.fill("ZENITH // CORE // SYSTEMS //")
						.map((text) => (
							<div class="tech-item text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-slate-700 to-slate-800 tracking-tighter">
								{text}
							</div>
						))
				}
			</div>
		</div>

		<div
			class="absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-slate-950 to-transparent z-10 pointer-events-none"
		>
		</div>
		<div
			class="absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-slate-950 to-transparent z-10 pointer-events-none"
		>
		</div>
	</section>

	<section class="py-24 relative overflow-hidden">
		<div class="max-w-7xl mx-auto px-6 relative z-10 w-full mb-20">
			<div
				class="max-w-3xl mx-auto glass p-1.5 rounded-2xl border-white/15 shadow-3xl text-center"
			>
				<div
					class="bg-black/80 rounded-xl overflow-hidden backdrop-blur-3xl"
				>
					<div
						class="px-5 py-4 border-b border-white/15/50 flex items-center justify-between"
					>
						<div class="flex gap-2">
							<div
								class="w-3 h-3 rounded-full bg-rose-500/20 border border-rose-500/30"
							>
							</div>
							<div
								class="w-3 h-3 rounded-full bg-amber-500/20 border border-amber-500/30"
							>
							</div>
							<div
								class="w-3 h-3 rounded-full bg-emerald-500/20 border border-emerald-500/30"
							>
							</div>
						</div>
						<div
							class="text-[10px] text-slate-500 font-mono uppercase tracking-widest"
						>
							kodajs --version
						</div>
					</div>
					<div
						class="p-8 text-left font-mono text-sm leading-relaxed"
					>
						<div class="flex gap-3 mb-2">
							<span class="text-sky-400">$</span>
							<span class="text-slate-100"
								>bun create koda my-cosmic-app</span
							>
						</div>
						<div class="text-slate-500 mb-2 pl-6">
							Resolving cosmic dependencies...
						</div>
						<div class="text-emerald-400 mb-2 pl-6">
							✓ Project initialized successfully
						</div>
						<div class="flex gap-3 mt-4">
							<span class="text-sky-400">$</span>
							<span class="text-slate-100"
								>cd my-cosmic-app && bun dev</span
							>
						</div>
						<div
							class="text-koda-300 mt-2 pl-6 flex items-center gap-2"
						>
							Koda Zenith v2.0.0 listening on port 4321
							<span class="w-2 h-5 bg-sky-500/50 animate-pulse"
							></span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Institutional Marquee -->
	<section
		class="py-12 border-y border-white/15/50 bg-slate-900/40 overflow-hidden relative"
	>
		<div
			class="absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-neutral-900 to-transparent z-10 pointer-events-none"
		>
		</div>
		<div
			class="absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-neutral-900 to-transparent z-10 pointer-events-none"
		>
		</div>
		<div class="marquee gap-24 items-center">
			{
				[1, 2, 3].map(() => (
					<>
						<div class="flex items-center gap-4 opacity-20 hover:opacity-100 transition-all cursor-default grayscale hover:grayscale-0">
							<span class="text-2xl font-black tracking-[0.2em] text-white">
								COSMOS
							</span>
						</div>
						<div class="flex items-center gap-4 opacity-20 hover:opacity-100 transition-all cursor-default grayscale hover:grayscale-0">
							<span class="text-2xl font-black tracking-[0.2em] text-white">
								ORBIT
							</span>
						</div>
						<div class="flex items-center gap-4 opacity-20 hover:opacity-100 transition-all cursor-default grayscale hover:grayscale-0">
							<span class="text-2xl font-black tracking-[0.2em] text-white">
								NEBULA
							</span>
						</div>
						<div class="flex items-center gap-4 opacity-20 hover:opacity-100 transition-all cursor-default grayscale hover:grayscale-0">
							<span class="text-2xl font-black tracking-[0.2em] text-white">
								PULSAR
							</span>
						</div>
						<div class="flex items-center gap-4 opacity-20 hover:opacity-100 transition-all cursor-default grayscale hover:grayscale-0">
							<span class="text-2xl font-black tracking-[0.2em] text-white">
								QUASAR
							</span>
						</div>
					</>
				))
			}
		</div>
	</section>
	<!-- Features Section -->
	<section id="features" class="py-32 relative overflow-hidden">
		<!-- Hazard Strip -->
		<div class="hazard-strip-container">
			<div
				class="hazard-strip"
				style="top: 10%; transform: rotate(-12deg);"
			>
				<div class="hazard-strip-content">
					{
						Array(20)
							.fill("ZENITH // CAUTION // INDUSTRIAL SECTOR //")
							.map((text) => <span>{text}</span>)
					}
				</div>
			</div>
		</div>
		<div class="max-w-7xl mx-auto px-6 relative z-10">
			<div class="text-center mb-24">
				<h2 class="text-4xl md:text-5xl font-black mb-6 tracking-tight">
					<span class="gradient-text">Institutional Engineering</span>
				</h2>
				<p class="text-xl text-slate-400 max-w-2xl mx-auto font-medium">
					Enterprise-grade foundations for the modern explorer.
				</p>
			</div>

			<div
				class="grid grid-cols-1 lg:grid-cols-3 gap-6 auto-rows-[minmax(200px,auto)]"
			>
				<!-- Feature 1: Bun Runtime (Large/Hero Feature) -->
				<!-- Takes 2x2 space on Desktop -->
				<div
					class="glass-card group lg:col-span-2 lg:row-span-2 relative overflow-hidden flex flex-col justify-between min-h-[400px]"
				>
					<div
						class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-pink-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
					>
					</div>

					<div class="relative z-10">
						<div
							class="w-16 h-16 bg-gradient-to-br from-pink-500 to-rose-600 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform glow shadow-lg shadow-pink-500/20"
						>
							<svg
								class="w-8 h-8 text-white"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2.5"
									d="M13 10V3L4 14h7v7l9-11h-7z"></path>
							</svg>
						</div>
						<h3 class="text-3xl font-black mb-4 text-white">
							Bun Runtime
						</h3>
						<p
							class="text-slate-400 leading-relaxed font-medium text-lg max-w-md"
						>
							Built for modern performance. No Node.js legacy
							weight. Just raw, unadulterated speed.
						</p>
					</div>

					<!-- Decorative Terminal/Speed Graphic -->
					<div
						class="mt-8 relative rounded-xl bg-slate-950/50 border border-white/5 p-4 font-mono text-sm text-slate-300"
					>
						<div
							class="flex items-center gap-2 mb-2 border-b border-white/5 pb-2"
						>
							<div class="w-3 h-3 rounded-full bg-rose-500"></div>
							<div class="w-3 h-3 rounded-full bg-amber-500">
							</div>
							<div class="w-3 h-3 rounded-full bg-emerald-500">
							</div>
							<span class="text-xs text-slate-500 ml-2"
								>benchmark.sh</span
							>
						</div>
						<div class="space-y-1">
							<div class="flex justify-between">
								<span>bun run index.ts</span>
								<span class="text-emerald-400">8ms ⚡</span>
							</div>
							<div class="flex justify-between opacity-40">
								<span>node index.js</span>
								<span>42ms</span>
							</div>
							<div class="flex justify-between opacity-40">
								<span>deno run index.ts</span>
								<span>26ms</span>
							</div>
						</div>
					</div>
				</div>

				<!-- Feature 2: Elysia Ergonomics (Standard) -->
				<div class="glass-card group lg:col-span-1">
					<div
						class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-indigo-700 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform glow shadow-lg shadow-indigo-500/20"
					>
						<svg
							class="w-6 h-6 text-white"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2.5"
								d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold mb-3 text-white">
						Elysia Ergonomics
					</h3>
					<p
						class="text-slate-400 leading-relaxed font-medium text-sm"
					>
						Fluent, chainable APIs with end-to-end type safety. Feel
						the friction vanish.
					</p>
