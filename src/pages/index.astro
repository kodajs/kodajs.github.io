---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
	<div class="noise-overlay"></div>
	<!-- Header -->
	<!-- Tactical HUD: Top Left (Brand & Status) -->
	<div class="fixed top-6 left-6 z-50 flex items-center gap-4">
		<a
			href="/"
			class="glass-dark px-4 py-2 rounded-full flex items-center gap-3 border border-white/10 hover:border-sky-500/50 transition-all duration-300 group"
		>
			<img
				src="/logo.svg"
				alt="KodaJS Logo"
				class="w-6 h-6 drop-shadow-lg group-hover:rotate-12 transition-transform"
			/>
			<span class="font-bold tracking-tight text-sm"
				>Koda<span class="text-sky-400">Zenith</span></span
			>
		</a>
		<div
			class="glass-dark px-3 py-2 rounded-full flex items-center gap-2 border border-white/10 hidden md:flex"
		>
			<span class="relative flex h-2 w-2">
				<span
					class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"
				></span>
				<span
					class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"
				></span>
			</span>
			<span class="text-xs font-mono text-emerald-500/80 tracking-wider"
				>SYSTEM ONLINE</span
			>
		</div>
	</div>

	<!-- Tactical HUD: Top Right (Navigation) -->
	<div class="fixed top-6 right-6 z-50 flex items-center gap-3">
		<nav class="hidden md:flex items-center gap-2">
			{
				["Docs", "Ecosystem", "Blog"].map((item) => (
					<a
						href={`#${item.toLowerCase()}`}
						class="glass-dark px-4 py-2 rounded-full text-xs font-medium text-slate-300 hover:text-white hover:border-sky-500/50 border border-white/10 transition-all duration-300 hover:shadow-[0_0_15px_rgba(14,165,233,0.3)]"
					>
						{item}
					</a>
				))
			}
		</nav>
		<a
			href="https://github.com/kodajs"
			target="_blank"
			class="glass-dark p-2 rounded-full text-slate-300 hover:text-white hover:bg-white/10 border border-white/10 transition-all"
		>
			<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
				><path
					d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
				></path></svg
			>
		</a>
	</div>

	<!-- Hero Section -->
	<section
		class="min-h-screen flex items-center pt-24 pb-12 overflow-hidden relative"
	>
		<div
			class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-[20rem] font-black text-white/[0.015] pointer-events-none select-none tracking-tighter z-0 leading-none"
		>
			ZENITH
		</div>
		<div
			class="absolute inset-x-0 bottom-0 top-1/2 -z-10 bg-gradient-to-t from-zinc-950 via-slate-900 to-transparent"
		>
		</div>
		<div class="max-w-7xl mx-auto px-6 relative z-10 w-full">
			<div class="text-center max-w-4xl mx-auto mb-16">
				<!-- Badge -->
				<div
					class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-xs font-medium mb-8 bg-slate-800/70 border border-white/10 text-slate-400 shadow-sm"
				>
					<span class="w-1.5 h-1.5 bg-sky-500 rounded-full"></span>
					Phase 2 · Active Development
				</div>

				<!-- Title -->
				<h1
					class="text-5xl md:text-7xl font-bold mb-6 leading-tight tracking-tight relative z-20"
				>
					<span class="gradient-text glitch" data-text="Koda Zenith"
						>Koda Zenith</span
					>
				</h1>

				<!-- Animated Headlines Container -->
				<div class="relative h-[3rem] md:h-[2.5rem] mb-4">
					<p
						class="text-2xl md:text-3xl text-slate-200 font-medium absolute inset-x-0 top-0 text-center transition-all duration-500"
						id="headline-1"
					>
						The Hono-native meta-framework
					</p>
					<p
						class="text-2xl md:text-3xl text-slate-200 font-medium absolute inset-x-0 top-0 text-center opacity-0 transition-all duration-500"
						id="headline-2"
					>
						Beyond Frameworks. Forge the Web Evolution
					</p>
				</div>

				<!-- Animated Subtitle Container -->
				<div
					class="relative h-[5rem] md:h-[3rem] mb-10 max-w-xl mx-auto"
				>
					<p
						class="text-lg text-slate-500 leading-relaxed text-center absolute inset-x-0 top-0 transition-all duration-500"
						id="subtitle-1"
					>
						ESM-first, <span class="text-white font-medium"
							>Bun-fueled</span
						>, and engineered for production. Built on <span
							class="text-sky-700">Hono</span
						> for blazing edge performance.
					</p>
					<p
						class="text-lg text-slate-500 leading-relaxed text-center absolute inset-x-0 top-0 opacity-0 transition-all duration-500"
						id="subtitle-2"
					>
						The high-performance <span class="text-sky-700"
							>substrate</span
						> for the post-web era. Powered by <span
							class="text-white">Rust, Zig, and Elixir</span
						> core.
					</p>
				</div>

				<!-- CTA Buttons -->
				<div
					class="flex flex-col sm:flex-row items-center justify-center gap-4"
				>
					<a href="#features" class="button-primary group">
						<svg
							class="w-4 h-4"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
						Get Started
					</a>
					<a
						href="https://github.com/kodajs/koda"
						target="_blank"
						class="button-secondary group"
					>
						<svg
							class="w-4 h-4"
							fill="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
							></path>
						</svg>
						View on GitHub
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Trusted Technologies -->
	<section
		class="border-y border-white/10 py-8 bg-slate-800/60 relative z-20 overflow-hidden backdrop-blur-sm"
	>
		<div class="max-w-7xl mx-auto px-6">
			<p
				class="text-[10px] font-mono tracking-widest uppercase text-slate-500 text-center mb-6"
			>
				Built With
			</p>
			<div
				class="flex flex-wrap justify-center gap-x-12 gap-y-4 text-sm text-slate-400"
			>
				<!-- Core Language Cycler: Rust / Zig / Elixir -->
				<span class="flex items-center gap-2">
					<span class="w-1.5 h-1.5 bg-orange-400 rounded-full"></span>
					<span class="relative w-12 h-5 overflow-hidden">
						<span id="core-1" class="tech-slide tech-slide-active"
							>Rust</span
						>
						<span id="core-2" class="tech-slide">Zig</span>
						<span id="core-3" class="tech-slide">Elixir</span>
					</span>
				</span>

				<!-- Runtime Cycler: Bun / Hono / Deno -->
				<span class="flex items-center gap-2">
					<span class="w-1.5 h-1.5 bg-pink-400 rounded-full"></span>
					<span class="relative w-12 h-5 overflow-hidden">
						<span
							id="runtime-1"
							class="tech-slide tech-slide-active">Bun</span
						>
						<span id="runtime-2" class="tech-slide">Hono</span>
						<span id="runtime-3" class="tech-slide">Deno</span>
					</span>
				</span>

				<!-- Module Cycler: ESM / WASM -->
				<span class="flex items-center gap-2">
					<span class="w-1.5 h-1.5 bg-emerald-400 rounded-full"
					></span>
					<span class="relative w-14 h-5 overflow-hidden">
						<span id="module-1" class="tech-slide tech-slide-active"
							>ESM</span
						>
						<span id="module-2" class="tech-slide">WASM</span>
					</span>
				</span>

				<!-- Framework Cycler: React / Svelte / Solid / Vue / Preact / Qwik -->
				<span class="flex items-center gap-2">
					<span class="w-1.5 h-1.5 bg-sky-400 rounded-full"></span>
					<span class="relative w-14 h-5 overflow-hidden">
						<span
							id="framework-1"
							class="tech-slide tech-slide-active">React</span
						>
						<span id="framework-2" class="tech-slide">Svelte</span>
						<span id="framework-3" class="tech-slide">Solid</span>
						<span id="framework-4" class="tech-slide">Vue</span>
						<span id="framework-5" class="tech-slide">Preact</span>
						<span id="framework-6" class="tech-slide">Qwik</span>
					</span>
				</span>
			</div>
		</div>
	</section>

	<section class="py-24 relative overflow-hidden">
		<div class="max-w-7xl mx-auto px-6 relative z-10 w-full mb-20">
			<div
				class="max-w-3xl mx-auto glass p-1.5 rounded-2xl border-white/15 shadow-3xl text-center"
			>
				<div
					class="bg-black/80 rounded-xl overflow-hidden backdrop-blur-3xl"
				>
					<div
						class="px-5 py-4 border-b border-white/15/50 flex items-center justify-between"
					>
						<div class="flex gap-2">
							<div
								class="w-3 h-3 rounded-full bg-rose-500/20 border border-rose-500/30"
							>
							</div>
							<div
								class="w-3 h-3 rounded-full bg-amber-500/20 border border-amber-500/30"
							>
							</div>
							<div
								class="w-3 h-3 rounded-full bg-emerald-500/20 border border-emerald-500/30"
							>
							</div>
						</div>
						<div
							class="text-[10px] text-slate-500 font-mono uppercase tracking-widest"
						>
							kodajs --version
						</div>
					</div>
					<div
						class="p-8 text-left font-mono text-sm leading-relaxed"
					>
						<div class="flex gap-3 mb-2">
							<span class="text-sky-400">$</span>
							<span class="text-slate-100"
								>bun create koda my-cosmic-app</span
							>
						</div>
						<div class="text-slate-500 mb-2 pl-6">
							Resolving cosmic dependencies...
						</div>
						<div class="text-emerald-400 mb-2 pl-6">
							✓ Project initialized successfully
						</div>
						<div class="flex gap-3 mt-4">
							<span class="text-sky-400">$</span>
							<span class="text-slate-100"
								>cd my-cosmic-app && bun dev</span
							>
						</div>
						<div
							class="text-koda-300 mt-2 pl-6 flex items-center gap-2"
						>
							Koda Zenith v2.0.0 listening on port 4321
							<span class="w-2 h-5 bg-sky-500/50 animate-pulse"
							></span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Institutional Marquee -->
	<section
		class="py-12 border-y border-white/15/50 bg-slate-900/40 overflow-hidden relative"
	>
		<div
			class="absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-neutral-900 to-transparent z-10 pointer-events-none"
		>
		</div>
		<div
			class="absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-neutral-900 to-transparent z-10 pointer-events-none"
		>
		</div>
		<div class="marquee gap-24 items-center">
			{
				[1, 2, 3].map(() => (
					<>
						<div class="flex items-center gap-4 opacity-20 hover:opacity-100 transition-all cursor-default grayscale hover:grayscale-0">
							<span class="text-2xl font-black tracking-[0.2em] text-white">
								COSMOS
							</span>
						</div>
						<div class="flex items-center gap-4 opacity-20 hover:opacity-100 transition-all cursor-default grayscale hover:grayscale-0">
							<span class="text-2xl font-black tracking-[0.2em] text-white">
								ORBIT
							</span>
						</div>
						<div class="flex items-center gap-4 opacity-20 hover:opacity-100 transition-all cursor-default grayscale hover:grayscale-0">
							<span class="text-2xl font-black tracking-[0.2em] text-white">
								NEBULA
							</span>
						</div>
						<div class="flex items-center gap-4 opacity-20 hover:opacity-100 transition-all cursor-default grayscale hover:grayscale-0">
							<span class="text-2xl font-black tracking-[0.2em] text-white">
								PULSAR
							</span>
						</div>
						<div class="flex items-center gap-4 opacity-20 hover:opacity-100 transition-all cursor-default grayscale hover:grayscale-0">
							<span class="text-2xl font-black tracking-[0.2em] text-white">
								QUASAR
							</span>
						</div>
					</>
				))
			}
		</div>
	</section>
	<!-- Features Section -->
	<section id="features" class="py-32 relative overflow-hidden">
		<!-- Hazard Strip -->
		<div class="hazard-strip-container">
			<div
				class="hazard-strip"
				style="top: 10%; transform: rotate(-12deg);"
			>
				<div class="hazard-strip-content">
					{
						Array(20)
							.fill("ZENITH // CAUTION // INDUSTRIAL SECTOR //")
							.map((text) => <span>{text}</span>)
					}
				</div>
			</div>
		</div>
		<div class="max-w-7xl mx-auto px-6 relative z-10">
			<div class="text-center mb-24">
				<h2 class="text-4xl md:text-5xl font-black mb-6 tracking-tight">
					<span class="gradient-text">Institutional Engineering</span>
				</h2>
				<p class="text-xl text-slate-400 max-w-2xl mx-auto font-medium">
					Enterprise-grade foundations for the modern explorer.
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
				<!-- Feature 1 -->
				<div class="glass-card group">
					<div
						class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-indigo-700 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform glow"
					>
						<svg
							class="w-8 h-8 text-white"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2.5"
								d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
					</div>
					<h3 class="text-2xl font-bold mb-4">Elysia Ergonomics</h3>
					<p class="text-slate-400 leading-relaxed font-medium">
						Fluent, chainable APIs with end-to-end type safety. Feel
						the friction vanish.
					</p>
				</div>

				<!-- Feature 2 -->
				<div class="glass-card group">
					<div
						class="w-16 h-16 bg-gradient-to-br from-sky-500 to-sky-700 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform glow"
					>
						<svg
							class="w-8 h-8 text-white"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2.5"
								d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
							></path>
						</svg>
					</div>
					<h3 class="text-2xl font-bold mb-4">Nest Inspired</h3>
					<p class="text-slate-400 leading-relaxed font-medium">
						Rigid structure inspired by NestJS and Spring.
						Enterprise-ready, by design.
					</p>
				</div>

				<!-- Feature 3 -->
				<div class="glass-card group">
					<div
						class="w-16 h-16 bg-gradient-to-br from-sky-500 to-sky-700 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform glow"
					>
						<svg
							class="w-8 h-8 text-white"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2.5"
								d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
					</div>
					<h3 class="text-2xl font-bold mb-4">Bun Runtime</h3>
					<p class="text-slate-400 leading-relaxed font-medium">
						Built for modern performance. No Node.js legacy weight.
						Just raw speed.
					</p>
				</div>
			</div>
		</div>
	</section>

	<section class="py-32 relative overflow-hidden">
		<!-- Hazard Strip -->
		<div class="hazard-strip-container">
			<div
				class="hazard-strip hazard-strip-reverse"
				style="bottom: 20%; transform: rotate(5deg);"
			>
				<div class="hazard-strip-content">
					{
						Array(20)
							.fill(
								"ZENITH // RESTRICTED AREA // HIGH VOLTAGE //",
							)
							.map((text) => <span>{text}</span>)
					}
				</div>
			</div>
		</div>
		<!-- Dark background with subtle gradient -->
		<div
			class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"
		>
		</div>
		<!-- Subtle accent glow -->
		<div
			class="absolute top-1/2 right-0 w-96 h-96 bg-sky-600/3 rounded-full blur-3xl"
		>
		</div>
		<div class="max-w-7xl mx-auto px-6 relative z-10">
			<div class="grid lg:grid-cols-2 gap-16 items-center">
				<div>
					<h2
						class="text-4xl md:text-5xl font-black mb-8 tracking-tight"
					>
						<span class="gradient-text">Unified DSLs</span>
					</h2>
					<p
						class="text-xl text-slate-400 mb-10 leading-relaxed font-medium"
					>
						Koda Zenith introduces a symbiotic relationship between
						server logic and UI composition through dedicated DSLs.
					</p>

					<!-- Interactive Toggle Controls -->
					<div class="flex gap-2 p-1 glass rounded-xl w-fit mb-10">
						<button
							id="toggle-koda"
							class="px-6 py-2.5 rounded-lg text-sm font-bold transition-all bg-sky-500 text-white shadow-lg"
						>
							.koda (Brain)
						</button>
						<button
							id="toggle-zen"
							class="px-6 py-2.5 rounded-lg text-sm font-bold transition-all text-slate-400 hover:text-white"
						>
							.zen (Body)
						</button>
					</div>

					<div class="space-y-6">
						<div class="flex gap-5">
							<div
								class="flex-none w-10 h-10 rounded-lg bg-sky-500/10 border border-sky-500/20 flex items-center justify-center text-sky-400 font-bold"
							>
								.koda
							</div>
							<div>
								<h4 class="text-lg font-bold mb-1 text-white">
									Logic Sovereignty
								</h4>
								<p class="text-slate-400">
									Rigid server-side structures with enterprise
									patterns.
								</p>
							</div>
						</div>
						<div class="flex gap-5">
							<div
								class="flex-none w-10 h-10 rounded-lg bg-indigo-500/10 border border-zenith-500/20 flex items-center justify-center text-indigo-400 font-bold"
							>
								.zen
							</div>
							<div>
								<h4 class="text-lg font-bold mb-1 text-white">
									Visual Fluidity
								</h4>
								<p class="text-slate-400">
									Flutter-inspired UI DX for deterministic
									interface building.
								</p>
							</div>
						</div>
					</div>
				</div>

				<div
					class="code-container p-1 shadow-2xl relative min-h-[400px]"
				>
					<!-- Koda Code (Logic) -->
