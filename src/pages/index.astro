			document.addEventListener("DOMContentLoaded", () => {
				const steps = document.querySelectorAll(".step-card");

				const observerOptions = {
					root: null,
					rootMargin: "-40% 0px -40% 0px",
					threshold: 0,
				};

				const observer = new IntersectionObserver((entries) => {
					entries.forEach((entry) => {
						if (entry.isIntersecting) {
							const targetId =
								entry.target.getAttribute("data-target");
							if (targetId) highlightLayer(targetId);

							// Highlight the card itself
							steps.forEach((s) =>
								s.classList.remove(
									"opacity-100",
									"scale-105",
									"bg-white/5",
								),
							);
							steps.forEach((s) => s.classList.add("opacity-40"));

							entry.target.classList.remove("opacity-40");
							entry.target.classList.add(
								"opacity-100",
								"scale-105",
								"bg-white/5",
							);
						}
					});
				}, observerOptions);

				steps.forEach((step) => observer.observe(step));

				// Initialize opacity
				steps.forEach((s) =>
					s.classList.add(
						"opacity-40",
						"transition-all",
						"duration-500",
						"rounded-xl",
						"p-6",
					),
				);

				function highlightLayer(layerId: string) {
					// Wait for Mermaid to be ready
					const checkMermaid = setInterval(() => {
						const svg = document.querySelector(
							".mermaid svg",
						) as SVGSVGElement;
						if (svg) {
							clearInterval(checkMermaid);
							applyHighlight(svg, layerId);
						}
					}, 100);
				}

				function applyHighlight(svg: SVGSVGElement, activeId: string) {
					// Reset all opacities first
					const allGroups = svg.querySelectorAll(
						"g.cluster",
					) as NodeListOf<SVGGElement>;
					allGroups.forEach((g) => {
						g.style.opacity = "0.3";
						g.style.transition = "opacity 0.5s ease";
					});

					// Highlight active
					// Mermaid creates ids like "App", "Koda", etc normally if they match the subgraph id
					// But sometimes creates complex IDs.
					// We will try finding by ID or by internal text label

					// Try ID Match first (most robust if Mermaid version supports it)
					// In recent mermaid, subgraphs have IDs corresponding to definitions
					let target =
						svg.querySelector(`g[id^="${activeId}"]`) ||
						svg.querySelector(`g[id*="${activeId}"]`);

					// Fallback: search by label text
					if (!target) {
						const labels = svg.querySelectorAll(
							"g.cluster span.nodeLabel",
						) as NodeListOf<HTMLElement>;
						labels.forEach((bg) => {
							if (
								bg.textContent?.includes(activeId.toUpperCase())
							) {
								target = bg.closest("g.cluster") as SVGGElement;
							}
						});
					}

					if (target) {
						(target as HTMLElement).style.opacity = "1";
						// Optional: Add a glow filter or stroke width increase
					}
				}
