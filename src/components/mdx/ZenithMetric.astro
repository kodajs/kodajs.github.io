---
const { label, value, unit, trend, trendValue } = Astro.props;

const isPositive = trend === "up";
---

<div
    class="glass-dark rounded-2xl border border-white/5 p-6 hover:border-sky-500/30 transition-all duration-500 hover:-translate-y-1 group"
>
    <div class="flex items-center justify-between mb-4">
        <span
            class="text-[10px] font-mono font-bold text-slate-500 uppercase tracking-widest"
            >{label}</span
        >
        {
            trend && (
                <div
                    class={`flex items-center gap-1 text-[10px] font-bold ${isPositive ? "text-emerald-400" : "text-rose-400"}`}
                >
                    <svg
                        class="w-3 h-3"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d={
                                isPositive
                                    ? "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                                    : "M13 17h8m0 0v-8m0 8l-8-8-4 4-6-6"
                            }
                        />
                    </svg>
                    <span>{trendValue}</span>
                </div>
            )
        }
    </div>

    <div class="flex items-baseline gap-2">
        <span
            class="text-3xl font-black text-white tracking-tighter group-hover:text-sky-400 transition-colors uppercase"
            >{value}</span
        >
        <span class="text-xs font-mono font-bold text-slate-500 uppercase"
            >{unit}</span
        >
    </div>

    <!-- Mini Progress Bar / Visual Decor -->
    <div
        class="mt-6 flex gap-1 h-0.5 opacity-30 group-hover:opacity-100 transition-opacity"
    >
        <div class="flex-1 bg-sky-500 rounded-full"></div>
        <div class="flex-1 bg-slate-800 rounded-full"></div>
        <div class="flex-1 bg-slate-800 rounded-full"></div>
    </div>
</div>
