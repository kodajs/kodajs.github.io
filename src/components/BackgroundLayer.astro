<div class="noise-overlay"></div>
<!-- Starfield Background -->
<div class="stars-container">
    <div class="stars-1"></div>
    <div class="stars-2"></div>
    <div class="stars-3"></div>
</div>
<!-- Shooting Stars (Overdrive) -->
<div class="shooting-stars">
    <div class="shooting-star" style="top: 0; left: 50%; animation-delay: 0s;">
    </div>
    <div class="shooting-star" style="top: 20%; left: 0%; animation-delay: 2s;">
    </div>
    <div
        class="shooting-star"
        style="top: 60%; left: 80%; animation-delay: 4s;"
    >
    </div>
    <div
        class="shooting-star"
        style="top: 10%; left: 90%; animation-delay: 1.5s;"
    >
    </div>
</div>
<!-- Cyber Grid (Overdrive) -->
<div class="cyber-grid"></div>
<!-- Dark Industrial Metal Background -->
<div class="fixed inset-0 -z-10">
    <div
        class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"
    >
    </div>
    <div
        class="absolute top-0 left-1/4 w-96 h-96 bg-sky-600/5 rounded-full blur-3xl animate-pulse-slow"
    >
    </div>
    <div
        class="absolute bottom-0 right-1/4 w-96 h-96 bg-indigo-600/5 rounded-full blur-3xl animate-pulse-slow"
        style="animation-delay: 2s;"
    >
    </div>
</div>

<style is:global>
    /* Cosmic Starfield */
    @keyframes move-twinkle {
        from {
            transform: translateY(0);
        }
        to {
            transform: translateY(-2000px);
        }
    }

    .stars-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -5;
        pointer-events: none;
        overflow: hidden;
    }

    .stars-1 {
        width: 1px;
        height: 1px;
        background: transparent;
        box-shadow:
            1744px 122px #fff,
            134px 1321px #fff,
            92px 859px #fff;
        animation: move-twinkle 200s linear infinite;
        opacity: 0.3;
    }

    .stars-2 {
        width: 2px;
        height: 2px;
        background: transparent;
        box-shadow:
            432px 543px #fff,
            123px 765px #fff;
        animation: move-twinkle 150s linear infinite;
        opacity: 0.2;
    }

    .stars-3 {
        width: 3px;
        height: 3px;
        background: transparent;
        box-shadow: 876px 234px #fff;
        animation: move-twinkle 100s linear infinite;
        opacity: 0.1;
    }

    /* Noise Overlay */
    .noise-overlay {
        position: fixed;
        inset: 0;
        z-index: 9999;
        pointer-events: none;
        opacity: 0.025;
        mix-blend-mode: multiply;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3BaseFilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/feTurbulence%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    }

    /* Cyber Grid (Overdrive) */
    .cyber-grid {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 40vh;
        background:
            linear-gradient(
                transparent 0%,
                rgba(14, 165, 233, 0.1) 2%,
                transparent 5%
            ),
            linear-gradient(
                90deg,
                transparent 0%,
                rgba(14, 165, 233, 0.1) 2%,
                transparent 5%
            );
        background-size: 40px 40px;
        transform: perspective(500px) rotateX(60deg) translateY(100px) scale(3);
        animation: grid-move 20s linear infinite;
        z-index: -5;
        mask-image: linear-gradient(to top, black, transparent);
        pointer-events: none;
    }

    @keyframes grid-move {
        0% {
            transform: perspective(500px) rotateX(60deg) translateY(100px)
                scale(3);
            background-position: 0 0;
        }
        100% {
            transform: perspective(500px) rotateX(60deg) translateY(100px)
                scale(3);
            background-position: 0 1000px;
        }
    }

    /* Shooting Stars */
    .shooting-stars {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        z-index: -1;
        pointer-events: none;
    }

    .shooting-star {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 4px;
        height: 4px;
        background: linear-gradient(-45deg, #5f91ff, rgba(0, 0, 255, 0));
        border-radius: 999px;
        filter: drop-shadow(0 0 6px #699bff);
        animation:
            tail 3s ease-in-out infinite,
            shooting 3s ease-in-out infinite;
    }

    .shooting-star::before {
        content: "";
        position: absolute;
        top: 100%;
        right: 0;
        width: 100px;
        height: 1px;
        background: linear-gradient(90deg, #5f91ff, transparent);
        transform: translateX(50%) rotateZ(45deg);
    }

    @keyframes tail {
        0% {
            width: 0;
        }
        30% {
            width: 100px;
        }
        100% {
            width: 0;
        }
    }

    @keyframes shooting {
        0% {
            transform: translateX(0) translateY(0) rotateZ(45deg);
        }
        100% {
            transform: translateX(1000px) translateY(1000px) rotateZ(45deg);
        }
    }

    @keyframes pulse-slow {
        0%,
        100% {
            opacity: 0.3;
            transform: scale(1);
        }
        50% {
            opacity: 0.5;
            transform: scale(1.1);
        }
    }

    .animate-pulse-slow {
        animation: pulse-slow 8s ease-in-out infinite;
    }
</style>
