<div
    id="command-menu-backdrop"
    class="fixed inset-0 bg-slate-950/80 backdrop-blur-sm z-[100] hidden opacity-0 transition-opacity duration-200"
>
    <div class="flex items-start justify-center pt-[20vh] h-full px-4">
        <div
            id="command-menu-panel"
            role="dialog"
            aria-modal="true"
            class="w-full max-w-2xl bg-slate-900/90 glass rounded-2xl border border-white/10 shadow-2xl transform scale-95 opacity-0 transition-all duration-200 overflow-hidden flex flex-col max-h-[60vh]"
        >
            <!-- Search Input -->
            <div
                class="flex items-center border-b border-white/10 px-4 py-3 gap-3"
            >
                <svg
                    class="w-5 h-5 text-slate-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <input
                    type="text"
                    id="command-search-input"
                    placeholder="Search documentation..."
                    class="flex-1 bg-transparent border-none outline-none text-white placeholder-slate-500 font-medium h-8"
                    autocomplete="off"
                />
                <div
                    class="px-2 py-1 rounded bg-white/5 border border-white/10 text-[10px] font-bold text-slate-400"
                >
                    ESC
                </div>
            </div>

            <!-- Results -->
            <div
                id="command-results"
                class="overflow-y-auto p-2 space-y-1 min-h-[100px]"
            >
                <div class="text-center text-slate-500 py-8 text-sm">
                    Type to search docs & blog...
                </div>
            </div>

            <!-- Footer -->
            <div
                class="px-4 py-2 border-t border-white/5 bg-white/2 flex items-center justify-between text-[10px] text-slate-500"
            >
                <div class="flex gap-3">
                    <span>Navigate <kbd class="font-sans">↓↑</kbd></span>
                    <span>Select <kbd class="font-sans">↵</kbd></span>
                </div>
                <span>Koda Zenith Search</span>
            </div>
        </div>
    </div>
</div>

<script>
    let isOpen = false;
    let searchIndex: {
        title: string;
        description: string;
        slug: string;
        type: string;
    }[] = [];

    const backdrop = document.getElementById("command-menu-backdrop");
    const panel = document.getElementById("command-menu-panel");
    const input = document.getElementById(
        "command-search-input",
    ) as HTMLInputElement | null;
    const resultsContainer = document.getElementById("command-results");

    // Fetch index once
    async function loadIndex() {
        if (searchIndex.length > 0) return;
        try {
            const res = await fetch("/search.json");
            searchIndex = await res.json();
        } catch (e) {
            console.error("Failed to load search index", e);
        }
    }

    function toggleMenu(open: boolean) {
        if (!backdrop || !panel || !input) return;

        if (open) {
            loadIndex();
            isOpen = true;
            backdrop.classList.remove("hidden");
            // Trigger reflow
            void backdrop.offsetWidth;
            backdrop.classList.remove("opacity-0");
            panel.classList.remove("scale-95", "opacity-0");
            input.focus();
            document.body.style.overflow = "hidden";
        } else {
            isOpen = false;
            backdrop.classList.add("opacity-0");
            panel.classList.add("scale-95", "opacity-0");
            setTimeout(() => {
                backdrop.classList.add("hidden");
            }, 200);
            document.body.style.overflow = "";
            input.value = "";
            renderResults([]);
        }
    }

    // Keyboard Shortcuts
    document.addEventListener("keydown", (e) => {
        if ((e.metaKey || e.ctrlKey) && e.key === "k") {
            e.preventDefault();
            toggleMenu(!isOpen);
        }
        if (e.key === "Escape" && isOpen) {
            toggleMenu(false);
        }
    });

    // Clicking backdrop
    if (backdrop) {
        backdrop.addEventListener("click", (e) => {
            if (
                e.target === backdrop ||
                (e.target instanceof Element &&
                    e.target.closest(".flex") === e.target)
            ) {
                toggleMenu(false);
            }
        });
    }

    // Search Logic
    if (input) {
        input.addEventListener("input", (e) => {
            const query = (e.target as HTMLInputElement).value.toLowerCase();
            if (!query) {
                renderResults([]);
                return;
            }

            const results = searchIndex
                .filter((item) => {
                    return (
                        item.title.toLowerCase().includes(query) ||
                        item.description.toLowerCase().includes(query)
                    );
                })
                .slice(0, 5); // Limit to 5

            renderResults(results);
        });
    }

    function renderResults(results: any[]) {
        if (!resultsContainer || !input) return;

        if (results.length === 0 && input.value) {
            resultsContainer.innerHTML = `
            <div class="text-center text-slate-500 py-8 text-sm">
                No results found for "${input.value}"
            </div>
        `;
            return;
        }

        if (results.length === 0 && !input.value) {
            resultsContainer.innerHTML = `
            <div class="text-center text-slate-500 py-8 text-sm">
              Type to search docs & blog...
            </div>
        `;
            return;
        }

        resultsContainer.innerHTML = results
            .map(
                (item) => `
        <a href="${item.slug}" class="block group">
            <div class="flex items-center justify-between p-3 rounded-lg hover:bg-white/10 transition-colors cursor-pointer border border-transparent hover:border-white/5">
                <div class="flex items-center gap-3">
                     <div class="w-8 h-8 rounded-lg bg-sky-500/10 flex items-center justify-center text-sky-400 border border-sky-500/20">
                        ${
                            item.type === "Docs"
                                ? '<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>'
                                : '<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" /></svg>'
                        }
                     </div>
                     <div>
                        <div class="text-sm font-bold text-white group-hover:text-sky-400 transition-colors">${item.title}</div>
                        <div class="text-xs text-slate-500 line-clamp-1">${item.description}</div>
                     </div>
                </div>
                <div class="text-[10px] font-bold text-slate-600 group-hover:text-sky-500/50 uppercase tracking-wider">
                    ${item.type}
                </div>
            </div>
        </a>
    `,
            )
            .join("");
    }
</script>
